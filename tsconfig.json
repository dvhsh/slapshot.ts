{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*"          : ["./lib/*"],
      "@enum/*"      : ["./lib/sdk/enum/*"],
      "@type/*"      : ["./lib/sdk/type/*"],
      "@interface/*" : ["./lib/sdk/interface/*"],
    },
    "declaration": true,
  },
  "include": [
    "lib",
    "example"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}